{
  "name": "plexus",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "concurrently \"bun:dev:*\"",
    "dev:types": "bun run --filter @plexus/types build",
    "dev:frontend": "bun run --filter @plexus/frontend dev",
    "dev:backend": "bun run --filter @plexus/types build; PLEXUS_CONFIG_DIR=./config bun --watch packages/backend/src/index.ts"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
  }
}
